generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Since you're using SQLite
  url      = env("DATABASE_URL")
}

model Note {
  id      Int     @id @default(autoincrement())
  userId Int
  title   String
  content String
  user User @relation(fields: [userId], references:[id])
  createdAt DateTime @default(now())
}

model User {
  id      Int     @id @default(autoincrement())
  email   String
  password String
  name String
  notes Note[]
}